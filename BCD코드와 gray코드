int main()
{
	string array;
	cin >> array;
	cout << size(array) << endl;
	int *changed_num = new int[sizeof(array)];
	changed_num[0] = int(array[0]-48);
	int word = size(array);
	for (int i = 1; i < word; i++)
	{
		cout << "Word" << word - 1 << endl;
		if (array[i] == array[i - 1])
		{
			changed_num[i] = 0;
		}
		else
		{
			changed_num[i] = 1;
		}
	}
	cout << "첫번쨰값"<<changed_num[0] << endl;
	for (int i = 0; i < word; i++)
	{
		cout << changed_num[i];
	}
}
